extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)
block content
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= page

        div(class="bg-white shadow py-8 px-4 rounded mx-auto")
            form.space-y-8(id="image" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/properties/add-image/${property.id}`)
                input(type="hidden" name="_csrf" value= csrfToken)
            button(id="publish" class="w-full py-3 bg-indigo-600 text-white font-bold cursor-pointer" type="button") Publicar propiedad
block scripts
    script(src="/js/addImage.js")